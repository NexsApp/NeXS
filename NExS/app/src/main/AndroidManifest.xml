<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.co.nexs.nexsapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <application
        android:name="in.co.nexs.nexsapp.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name="in.co.nexs.nexsapp.NameActivity" />
        <activity android:name="in.co.nexs.nexsapp.PhoneAuth" />
        <activity android:name="in.co.nexs.nexsapp.FeedActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name="in.co.nexs.nexsapp.LoginActivity" />
        <activity android:name="in.co.nexs.nexsapp.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="in.co.nexs.nexsapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="nexs-news.com"
                    android:scheme="https" />
                <data
                    android:host="nexs-news.com"
                    android:scheme="http" />
            </intent-filter>

            <meta-data
                android:name="android.app.default_searchable"
                android:value=".FeedActivity"/>
        </activity>

        <service
            android:name="in.co.nexs.nexsapp.services.FcmCustomService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>